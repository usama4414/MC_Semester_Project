<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Cornsilk"
    tools:context=".Splash">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="434dp"
        android:layout_height="102dp"
        android:text="@string/welcome"
        android:textColor="@color/Orchid"
        android:textSize="52sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dancingscript"
        android:gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/startLogoSpin"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:contentDescription="@string/spinning_bottle"
        app:srcCompat="@drawable/spin1" />

    <ImageView
        android:id="@+id/startLogoChoose"
        android:layout_width="350dp"
        android:layout_height="239dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@string/spinning_bottle"
        app:srcCompat="@drawable/mylogo"
        android:layout_marginStart="20dp" />


</LinearLayout>