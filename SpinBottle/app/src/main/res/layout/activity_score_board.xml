<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreBoard"
    android:orientation="vertical"
    android:weightSum="12"
    android:background="@drawable/score4">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:background="@drawable/my_border"
        >
        <TextView
            android:id="@+id/pname1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textAlignment="center"
            android:fontFamily="@font/seasrn"
            />
        <TextView
            android:id="@+id/pscore1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:fontFamily="@font/seasrn"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@drawable/my_border"
        android:paddingTop="8dp"
        >
        <TextView
            android:id="@+id/pname2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textAlignment="center"
            tools:ignore="NestedWeights"
            android:fontFamily="@font/seasrn"/>
        <TextView
            android:id="@+id/pscore2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/seasrn"
            android:textSize="15sp"
            android:textAlignment="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingTop="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@drawable/my_border"
        android:paddingTop="8dp"
        >
        <TextView
            android:id="@+id/pname3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:fontFamily="@font/seasrn"
            android:textAlignment="center"

            />
        <TextView
            android:id="@+id/pscore3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:fontFamily="@font/seasrn"
            android:textAlignment="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@drawable/my_border"
        android:paddingTop="8dp"
        >
        <TextView
            android:id="@+id/pname4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textAlignment="center"
            android:fontFamily="@font/seasrn"
            />
        <TextView
            android:id="@+id/pscore4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textAlignment="center"
            android:fontFamily="@font/seasrn"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"

        />
    <Button
        android:id="@+id/keepPlay"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/BurlyWood"
        android:layout_gravity="center_horizontal"
        android:padding="4dp"
        android:text="@string/play"
        />

</LinearLayout>